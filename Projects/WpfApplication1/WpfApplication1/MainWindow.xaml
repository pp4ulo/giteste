<Window x:Name="Hello" x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Janela do Hello" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="449*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="44" Margin="52,46,0,0" TextWrapping="Wrap" Text="Digite o seu nome" VerticalAlignment="Top" Width="263" FontSize="25" TextDecorations="Underline" Grid.ColumnSpan="2"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="24" Margin="55,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="201" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" />


        <Button x:Name="ok" Content="OK" HorizontalAlignment="Left" Margin="228,95,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="okClick"/>

    </Grid>
</Window>
